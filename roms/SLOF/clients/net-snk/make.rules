ROOTDIR		?= $(TOP)/../..

include $(ROOTDIR)/make.rules

INCLCMNDIR	?= $(ROOTDIR)/include
LIBCMNDIR	?= $(ROOTDIR)/lib
CPPFLAGS	= -I$(TOP)/include -I$(LIBCMNDIR)/libc/include -I$(INCLCMNDIR) \
		  -I$(LIBCMNDIR)/libbootmsg -I$(INCLCMNDIR)/$(CPUARCH) -I.
